@page
@model Dog_Grooming_Salon.Pages.Dogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dog.ID" />
            <div class="form-group">
                <label asp-for="Dog.Name" class="control-label"></label>
                <input asp-for="Dog.Name" class="form-control" />
                <span asp-validation-for="Dog.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.Age" class="control-label"></label>
                <input asp-for="Dog.Age" class="form-control" />
                <span asp-validation-for="Dog.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.OwnerID" class="control-label">Owner Name</label>
                <select asp-for="Dog.OwnerID" class="form-control" asp-items="ViewBag.OwnerID">
                </select>
                <span asp-validation-for="Dog.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.AppointmentDate" class="control-label"></label>
                <input asp-for="Dog.AppointmentDate" class="form-control" />
                <span asp-validation-for="Dog.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dog.AppointmentHour" class="control-label"></label>
                <input asp-for="Dog.AppointmentHour" class="form-control" />
                <span asp-validation-for="Dog.AppointmentHour" class="text-danger"></span>
            </div>
            <div class="form-group">
 <div class="table">
 <table>
 <tr>
 @{
 int cnt = 0;
 foreach (var cat in Model.AssignedGenderDataList)
{
 if (cnt++ % 3 == 0)
{
@:</tr><tr>
}
@:<td>
 <input type="checkbox"
 name="selectedGenders"
 value="@cat.GenderID"
 @(Html.Raw(cat.Assigned ? 
"checked=\"checked\"" : "")) />
 @cat.GenderID @: @cat.Name
 @:</td>
 }
 @:</tr>
}
 </table>
 </div>
 </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
