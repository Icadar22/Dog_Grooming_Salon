@page "{id:int?}"
@model Dog_Grooming_Salon.Pages.Owners.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OwnerData.Owners)
        {
            string selectedRow = "";
            if (item.ID == Model.OwnerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.OwnerData.Dogs != null)
{
    <h3>Dogs that belong to their Owner</h3>
    <table class="table">
        @foreach (var item in Model.OwnerData.Owners)
        {
            string selectedRow = "";
            if (item.ID == Model.OwnerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @{
                        foreach (var b in item.Dogs)
                        {
                            @b.Name @: @b.Owner.FullName
                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
